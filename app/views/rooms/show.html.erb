<% content_for :title, "#{@room.name} | PodLoko iPod Control" %>
<h1>Room <%= @room.name %></h1>
<strong><%= link_to "Update Library", request_library_update_room_path(@room) %></strong>
<p><%= @room.tracks_json %></p>
<dl class="albums">
  <% @room_tracks.each do |album| %>
    <dt><%= playable_album_name(@room, album) %>
      <% album["tracks"].each_with_index do |track_title, ind| %>
        <dd><%= ind + 1 %> - <%= track_title %></dd>
      <% end %>
    </dt>
  <% end %>
</dl>
